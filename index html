    <p class="text-2xl text-gray-200 mt-4">Productos digitales reales por solo $6.66 - Valor $497</p>
  </header>
  <main class="container mx-auto px-6 py-12">
    <div id="products-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
      <!-- Productos inyectados dinámicamente -->
    </div>
  </main>

  <!-- Modal QR Crypto (seguridad: solo se muestra al elegir crypto) -->
  <div id="qr-modal" class="qr-modal">
    <div class="bg-slate-800 p-8 rounded-2xl text-center">
      <h2 class="text-3xl font-bold mb-6">Paga con Crypto $6.66</h2>
      <img id="qr-image" src="" alt="QR Crypto" class="mx-auto mb-6">
      <p class="text-xl">Wallet: 4335b5bf-1270-4187-b869-7b12228fb5e9</p>
      <button onclick="document.getElementById('qr-modal').style.display='none'" class="mt-6 px-8 py-4 bg-red-600 rounded-lg font-bold">Cerrar</button>
    </div>
  </div>

  <script>
    // Productos ejemplo (en producción se cargan desde JSON o API)
    const products = [
      {
        id: "EB-0001",
        title: "Ganar $500/mes con IA Freelance sin Inversión",
        brief: "Método real paso a paso para principiantes",
        description: "Guía completa con plataformas reales, prompts IA, checklists y casos de éxito.",
        cover: "https://example.com/cover1.jpg",
        gumroadLink: "https://easybuy.gumroad.com/l/product1",
        stripeLink: "https://buy.stripe.com/product1",
        qrData: "bitcoin:4335b5bf-1270-4187-b869-7b12228fb5e9?amount=6.66&label=EASYBUY EB-0001"
      }
      // Más productos se añaden automáticamente
    ];

    const grid = document.getElementById('products-grid');
    products.forEach(p => {
      const card = document.createElement('div');
      card.className = 'card rounded-2xl p-8 shadow-2xl';
      card.innerHTML = `
        <img src="${p.cover}" alt="${p.title}" class="w-full h-80 object-cover rounded-xl mb-8">
        <h2 class="text-3xl font-bold mb-4">${p.title}</h2>
        <p class="text-gray-300 mb-8">${p.brief}</p>
        <div class="flex justify-between items-center mb-8">
          <span class="text-5xl font-black text-green-400">$6.66</span>
          <span class="line-through text-3xl text-gray-500">$497</span>
        </div>
        <div class="flex gap-6">
          <button class="btn-explain px-8 py-4 rounded-xl font-bold text-xl" onclick="alert('${p.description.replace(/'/g, "\\'")}')">Explicación</button>
          <button class="btn-pay px-8 py-4 rounded-xl font-bold text-xl" onclick="showPaymentOptions('${p.gumroadLink}', '${p.stripeLink}', '${p.qrData}')">Pagar Ahora</button>
        </div>
        <div class="payment-icons mt-8 flex justify-center">
          <img src="https://upload.wikimedia.org/wikipedia/commons/5/5e/Visa_Inc._logo.svg" alt="Visa">
          <img src="https://upload.wikimedia.org/wikipedia/commons/2/2a/Mastercard-logo.svg" alt="MasterCard">
          <img src="https://upload.wikimedia.org/wikipedia/commons/4/46/Bitcoin.svg" alt="Bitcoin">
        </div>
      `;
      grid.appendChild(card);
    });

    function showPaymentOptions(gumroad, stripe, qrData) {
      const choice = prompt("Elige pago:\n1. Tarjetas (Stripe)\n2. Gumroad\n3. Crypto (Bitcoin QR)");
      if (choice === "1") window.open(stripe, '_blank');
      if (choice === "2") window.open(gumroad, '_blank');
      if (choice === "3") {
        const qrImg = document.getElementById('qr-image');
        qrImg.src = "https://api.qrserver.com/v1/create-qr-code/?size=300x300&data=" + encodeURIComponent(qrData);
        document.getElementById('qr-modal').style.display = 'flex';
      }
    }
  </script>
